<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Lensspace.com</title>
  <link rel="shortcut icon" type="image/png" href="/admin/assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="/admin/assets/css/styles.min.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <%-include('./includes/sidebar.ejs')%>
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <%-include("./includes/header.ejs")%>
      <!--  Header End -->

 





<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  
<section class="content-main">
    <div class="container">
        <div class="row">
           
                
                <% for(let i=0 ; i< category.length ;i++){%>
                    <div class="col-lg-3">
                <div class="card ">
                    <div class="card-header">
                        <h4>Offer</h4>
                    </div>
                    <div class="card-body">
                        <div class="input-upload">
                          <h5 style="color: rgb(28, 25, 160);"><%= category[i].name %></h5> 
                            <form action="/admin/categoryOffer" method="post">
                                <h6><label for="offer">Update Category Offer</label></h6>
                                <input class="form-control" name="offerPercentage" type="text">
                                <input class="form-control" name="id" type="hidden" value="<%= category[i]._id %>">
                                <br>
                                <button class="btn btn-sm btn-light rounded " style="color: rgb(255, 255, 255); background-color: rgb(70, 149, 122);" type="submit">save</button>
                            </form>
                        </div>
                    </div>
                </div> <!-- card end// -->
    
            </div>
    
                <%}%>
    
                <% if (totalpages) { %>
                    <div class="pagination justify-content-center">
                      <% if (currentpage > 1) { %>
                        <button class="btn btn-sm"><a href="?page=<%= currentpage - 1 %>">Previous</a></button>
                      <% } %>
                  
                      <% for (let i = 1; i <= totalpages; i++) { %> <!-- Change the loop to start from 1 and go up to totalpages -->
                        <button class="btn btn-sm"><a href="?page=<%= i %>" class="<%= i === currentpage ? 'active' : '' %>"><%= i %></a></button>
                      <% } %>
                  
                      <% if (currentpage < totalpages) { %>
                        <button class="btn btn-sm"><a href="?page=<%= currentpage + 1 %>">Next</a></button>
                      <% } %>
                    </div>
                  <% } %>
    
           
        </div>
    </div>
    
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    </section>





<script src="/admin/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="/admin/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script src="/admin/assets/js/app.min.js"></script>
<script src="/admin/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
<script src="/admin/assets/libs/simplebar/dist/simplebar.js"></script>
<script src="/admin/assets/js/dashboard.js"></script>

</body>

</html>

